# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME="Simple AI Question API"
APP_VERSION="1.0.0"
APP_DESCRIPTION="A simple FastAPI app for handling AI questions"
DEBUG=False
ENVIRONMENT=development

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST=0.0.0.0
PORT=8000
RELOAD=True

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
# Your OpenAI API key (required for AI functionality)
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI model configuration
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# =============================================================================
# DATABASE CONFIGURATION (if you plan to add a database)
# =============================================================================
# DATABASE_URL=sqlite:///./app.db
# DATABASE_URL=postgresql://username:password@localhost/dbname
# DATABASE_URL=mysql://username:password@localhost/dbname

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Secret key for JWT tokens (if implementing authentication)
SECRET_KEY=your_secret_key_here

# CORS settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE"]
ALLOWED_HEADERS=["*"]

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# RATE LIMITING (if implementing rate limiting)
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# =============================================================================
# CACHING CONFIGURATION (if implementing caching)
# =============================================================================
# REDIS_URL=redis://localhost:6379/0
# CACHE_TTL=300

# =============================================================================
# MONITORING & ANALYTICS (optional)
# =============================================================================
# SENTRY_DSN=your_sentry_dsn_here
# GOOGLE_ANALYTICS_ID=your_ga_id_here

# =============================================================================
# EXTERNAL SERVICES (if needed)
# =============================================================================
# WEBHOOK_URL=your_webhook_url_here
# EMAIL_SERVICE_API_KEY=your_email_api_key_here
